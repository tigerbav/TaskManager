<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttons_todolist_general_list">
        <item name="android:height">45dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/buttonshape_todolist_list</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="my_custom_alert_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#6C63FF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColorPrimary">#6C63FF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="dialogCornerRadius">20dp</item>
    </style>
    <style name="fontFam">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="switch_style" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/switchColor</item>
    </style>

</resources>
